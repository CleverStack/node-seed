{
    "orm": {
        "enabled": true,

        "models": [
            "Account",
            "User",
            "Role",
            "Permission"
        ],

        "modelAssociations": {
            "User": {
              "belongsTo": ["Account", "Role"]
            },
            "Role": {
                "belongsTo": ["Account"],
                "hasMany": ["Permission"]
            },
            "Permission": {
                "hasMany": ["Role"]
            },
            "Account": {}
        }
    }
}
