{
    "orm": {
        "enabled": true,

        "models": [
            "Permission",
            "Role"
        ],

        "modelAssociations": {
            "Account": {},
            "Role": {
                "belongsTo": ["Account"],
                "hasMany": ["Permission"]
            },
            "Permission": {
                "hasMany": ["Role"]
            },
            "User": {
              "belongsTo": ["Account", "Role"]
            }
        }
    }
}
